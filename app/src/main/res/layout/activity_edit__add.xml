<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit__add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.martijn.myapplication.src.Edit_Add_Activity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Cocktail Naam"
        android:ems="10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/CocktailName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Drank 1"
        android:ems="10"
        android:id="@+id/DrinkOne"
        android:layout_below="@+id/CocktailName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Drank 2"
        android:ems="10"
        android:layout_below="@+id/DrinkOne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/DrinkTwo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Drank 3"
        android:ems="10"
        android:layout_below="@+id/DrinkTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/DrinkThree" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="In ml"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:ems="10"
        android:id="@+id/volumeDrinkOne"
        android:layout_alignBaseline="@+id/DrinkOne"
        android:layout_alignBottom="@+id/DrinkOne"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="In ml"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:ems="10"
        android:id="@+id/volumeDrinkThree"
        android:layout_alignBaseline="@+id/DrinkThree"
        android:layout_alignBottom="@+id/DrinkThree"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="In ml"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:ems="10"
        android:id="@+id/volumeDrinkTwo"
        android:layout_alignBaseline="@+id/DrinkTwo"
        android:layout_alignBottom="@+id/DrinkTwo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Clear"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:id="@+id/ClearButton"
        android:background="@drawable/discard_rounded"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/AddButton"
        android:layout_alignStart="@+id/AddButton"
        android:layout_alignRight="@+id/AddButton"
        android:layout_alignEnd="@+id/AddButton" />

    <Button
        android:text="Save"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:id="@+id/AddButton"
        android:background="@drawable/rounded_corner"
        android:layout_above="@+id/ClearButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
